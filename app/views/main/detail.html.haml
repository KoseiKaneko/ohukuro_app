  .cotainer-left
    %h1 たこやき
    %img.top-img{:alt => "トップ画像", :src => "/assets/eat/index/index1.jpg"}
      .caption
        .sub-img
          .img-box 
            %img{:alt => "サブ画像", :src => "/assets/takoyaki1.jpeg"}
          .img-box 
